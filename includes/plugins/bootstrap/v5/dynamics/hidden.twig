{% macro hidden_input(input_name, input_value, options) %}
    <input type="hidden" name="{{ input_name }}" id="{{ options["input_id"] }}" value="{{ input_value }}"{{ whitespace(options['width'] ? 'style="width:' ~ options['inner_width' ] ~ ';"' : '') }}{{ whitespace(options['deactivate'] ? 'readonly': '') }}>
{% endmacro %}